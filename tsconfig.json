{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "es2018",
        "lib": ["es2018", "dom"],
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "noEmit": false,
        "downlevelIteration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "build"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
